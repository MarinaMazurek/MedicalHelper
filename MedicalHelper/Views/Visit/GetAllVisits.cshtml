@using MedicalHelper.Models.Visit

@model List<VisitViewModel>

<div>
    <table border="1" align="center" cellspacing="0" cellpadding="10">      
        <tr>
            <th>Specialization</th>
            <th>Name</th>
            <th>FullNameOfDoctor</th>
            <th>Date</th>
            <th></th>
        </tr>
        @foreach (var visit in Model)
        {
            <tr>
                <th>@visit.Specialization</th>
                <th>@visit.Name</th>
                <th>@visit.FullNameOfDoctor</th>
                <th>@visit.DateTime</th>
                <th>
                    <input class="button"
                           type="button"
                           value="Delete visit"
                           onclick="location.href='/Visit/VisitDelete?id=@visit.Id'" />
                </th>
            </tr>
        }
    </table>
</div>