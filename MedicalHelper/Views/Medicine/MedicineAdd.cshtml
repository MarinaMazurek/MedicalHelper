@using MedicalHelper.DataBase.Entities
@model MedicalHelper.Models.MedicineViewModel

<form asp-controller="Medicine" asp-action="MedicineAdd" method="post">
    <div>
        <label asp-for="VisitId">Visit Name</label>

        <select asp-for="VisitId" asp-items="ViewBag.Visits as SelectList"></select>
    </div>
    
    <div class="col-12 col-sm-10 col-md-6 col-lg-4 col-xl-3 margin-bottom-15">
        <label for="name" class="form-label">Name of medicine</label>
        <input asp-for="Name" class="form-control" id="name" required>
    </div>

    <div class="mb-3">
        <label for="cost" class="form-label">Cost of medicine</label>
        <input asp-for="Cost" class="form-control" id="cost" required>
    </div>
    
    <input type="submit" class="btn btn-primary" value="Add">

</form>