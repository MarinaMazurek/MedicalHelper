@using MedicalHelper.Business.ServicesImplementations
@using MedicalHelper.Core.Abstractions

@inject IUserService userService


<html>
    <head>
        <link rel="stylesheet" href="~/css/site.css">
    </head>
    <body> 
        <div class="header">
            <img src="~/image/meditsina.jpg" />
            Medical Helper
            <img src="~/image/meditsina.jpg" />
        </div>

        <div class="central-block">
            <div class="menu">
                Menu
                
            @if (!User.Identity.IsAuthenticated)
            {
                <div><a href="/User/Login"> Sign in </a></div>
                <div><a href="/User/Register"> Create an account </a></div>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <div><a href="/UserProfile/MyProfile"> My Profile </a></div>               
                <div><a href="/Visit/VisitAdd"> Add visit </a></div>
                <div><a href="/Visit/GetAllVisits"> All my visits </a></div>
                <div><a href="/Medicine/GetAllMedicine"> All Medicines </a></div>


                @if (userService.IsAdmin())
                {
                    <div><a href="/User/GetAllUsers"> Get All Users </a></div>
                    <div><a href="/UserProfile/GetAllUserProfiles"> Get All UserProfiles </a></div>
                }

                <div><a href="/User/Logout"> Exit </a></div>
            }
                        
            </div>
            <div class="content">
                @RenderBody()
            </div>
        </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - MedicalHelper - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    </body>
</html>
